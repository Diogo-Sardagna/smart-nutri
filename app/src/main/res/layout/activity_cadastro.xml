<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="View.CadastroActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioPaciente"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Paciente"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioNutricionista"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nutricionista"
            android:layout_marginEnd="40dp" />
    </RadioGroup>

    <EditText
        android:id="@+id/etNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:inputType="text"
        android:layout_below="@id/radioGroup"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"/>

        <com.santalu.maskara.widget.MaskEditText
            android:id="@+id/etCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CPF"
            android:inputType="number"
            android:layout_below="@id/etNome"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            app:mask="___.___.___-__"
            app:maskCharacter="_"
            tools:ignore="MissingConstraints"
            app:maskStyle="completable"/>

        <com.santalu.maskara.widget.MaskEditText
            android:id="@+id/etDataNascimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data de Nascimento"
            android:inputType="date"
            android:layout_below="@id/etCpf"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            app:mask="__/__/____"
            app:maskCharacter="_"
            tools:ignore="MissingConstraints"
            app:maskStyle="completable"/>

        <EditText
            android:id="@+id/etSexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sexo"
            android:inputType="text"
            android:layout_below="@id/etDataNascimento"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"/>

<!--        <com.santalu.maskara.widget.MaskEditText-->
        <EditText
            android:id="@+id/etPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso"
            android:inputType="numberDecimal"
            android:layout_below="@id/etSexo"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"/>
<!--            app:mask="___,__ kg"-->
<!--            app:maskCharacter="_"-->
<!--            tools:ignore="MissingConstraints"-->
<!--            app:maskStyle="completable"/>-->

<!--        <com.santalu.maskara.widget.MaskEditText-->
        <EditText
            android:id="@+id/etAltura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Altura"
            android:inputType="numberDecimal"
            android:maxLength="3"
            android:layout_below="@id/etPeso"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp" />
<!--            app:mask="_,__ cm"-->
<!--            app:maskCharacter="_"-->
<!--            tools:ignore="MissingConstraints"-->
<!--            app:maskStyle="completable"/>-->

        <com.santalu.maskara.widget.MaskEditText
            android:id="@+id/etCrm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CRM"
            android:inputType="text"
            android:layout_below="@id/etAltura"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            app:mask="CRM-_/_____"
            app:maskCharacter="_"
            tools:ignore="MissingConstraints"
            app:maskStyle="completable"
            android:visibility="gone"/>

        <com.santalu.maskara.widget.MaskEditText
            android:id="@+id/etTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:inputType="phone"
            android:layout_below="@id/etCrm"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            app:mask="+55 (__) 9____-____"
            app:maskCharacter="_"
            tools:ignore="MissingConstraints"
            app:maskStyle="completable"/>

        <EditText
            android:id="@+id/etInformacoesAdicionais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informações Adicionais"
            android:inputType="textMultiLine"
            android:maxLength="100"
            android:layout_below="@id/etTelefone"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:layout_below="@id/etInformacoesAdicionais"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/etSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:inputType="textPassword"
            android:maxLength="20"
            android:layout_below="@id/etEmail"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/etConfirmarSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar Senha"
            android:inputType="textPassword"
            android:maxLength="20"
            android:layout_below="@id/etSenha"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:layout_below="@id/etConfirmarSenha"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>


